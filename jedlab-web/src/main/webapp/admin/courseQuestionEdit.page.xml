<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd">


	<begin-conversation join="true" flush-mode="manual"/>
	
	<action execute="#{courseQuestionHome.load()}"/>

	<param name="courseId" required="true" value="#{courseQuestionHome.courseId}"/>
	
	<param name="questionId"  value="#{courseQuestionHome.questionId}"/>
	
	<navigation from-action="#{courseQuestionHome.persist()}">
		<rule if-outcome="persisted">
			<end-conversation/>
			<redirect view-id="/admin/answerEdit.xhtml">
				<param name="questionId" value="#{courseQuestionHome.instance.id}"/>
			</redirect>
		</rule>
	</navigation>
	
	<navigation from-action="#{courseQuestionHome.update()}">
		<rule if-outcome="update">
			<end-conversation/>
			<redirect view-id="/admin/answerEdit.xhtml">
				<param name="questionId" value="#{courseQuestionHome.instance.id}"/>
			</redirect>
		</rule>
	</navigation>
	
	<navigation from-action="#{courseQuestionHome.remove()}">
		<rule if-outcome="removed">
			<end-conversation/>
			<redirect view-id="/admin/courseQuestionList.xhtml">
				<param name="courseId" value="#{courseId}"/>
			</redirect>
		</rule>
	</navigation>
   
</page>
