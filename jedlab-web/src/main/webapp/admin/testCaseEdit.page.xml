<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      login-required="true"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd">

	<begin-conversation flush-mode="manual" join="true"/>
	
	<param name="qId" value="#{testCaseHome.questionId}" required="true"/>
	
	<param name="tcId" value="#{testCaseHome.testCaseId}" />
	
	<action execute="#{testCaseHome.load()}"/>
	
	<navigation from-action="#{testCaseHome.persist()}">
		<end-conversation />
		<rule if-outcome="persisted">
			<redirect view-id="/coders/questionList.xhtml" include-page-params="false">
			</redirect>
		</rule>
	</navigation>
	
	
	<navigation from-action="#{testCaseHome.update()}">
		<end-conversation />
		<rule if-outcome="updated">
			<redirect view-id="/coders/questionList.xhtml" include-page-params="false">
			</redirect>
		</rule>
	</navigation>
	
</page>
