<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	login-required="true"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd">
	
	<rewrite pattern="/profile"/>
	
	<description>
		#{messages['Profile']}
	</description>
	
	<begin-conversation join="true" flush-mode="manual"/>
	
	<action execute="#{userHome.load()}"/>
	
	<navigation from-action="#{userHome.update()}">
		<rule if-outcome="updated">
			<end-conversation/>
			<redirect view-id="/member/userEdit.xhtml"></redirect>
		</rule>
	</navigation>
	
	<navigation from-action="#{changePasswordAction.changePassword()}">
		<rule if-outcome="changed">
			<end-conversation/>
			<redirect view-id="/member/userEdit.xhtml"></redirect>
		</rule>
	</navigation>

</page>
