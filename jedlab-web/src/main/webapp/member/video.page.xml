<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	login-required="true"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd">

	<rewrite pattern="/video/{courseId}/{chapterId}"/>

	<param name="chapterId" value="#{chapterHome.chapterId}" required="true"/>
	<param name="courseId" value="#{chapterHome.course.id}" required="true"/>
	<param name="resolution" />
	
	<action execute="#{chapterHome.generateVideoToken()}" on-postback="false"/>
	
	<action execute="#{chapterHome.load()}" on-postback="false"/>

</page>
