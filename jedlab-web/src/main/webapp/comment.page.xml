<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"	
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd">

	<param name="courseId" value="#{commentQuery.course.id}" required="true"/>
	
	<navigation from-action="#{commentHome.persist()}">
		<end-conversation before-redirect="true"/>
		<rule if-outcome="persisted">
			<redirect view-id="/comment.xhtml" include-page-params="false">
				<param name="courseId" value="#{courseId}"/>
				<param name="cid" value=""/>
			</redirect>
		</rule>
	</navigation>
	
	
	<navigation from-action="#{commentHome.remove()}">
		<end-conversation before-redirect="true"/>
		<rule if-outcome="persisted">
			<redirect view-id="/comment.xhtml" include-page-params="false">
				<param name="courseId" value="#{courseId}"/>
				<param name="cid" value=""/>
			</redirect>
		</rule>
	</navigation>

</page>
