<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd">

	<rewrite pattern="/curate/page/{pageId}"/>
	
	<action execute="#{pageHome.updateViewCount()}" on-postback="false"/>
	
	<param name="pageId" value="#{pageHome.pageId}" required="true" converterId="javax.faces.Long"/>
	
	<navigation from-action="#{pageHome.sendForPublish()}">
		<end-conversation />
		<rule if-outcome="sendForPublish">
			<redirect view-id="/curate/curateEdit.xhtml">
				<param name="pageId" value="#{pageId}"/>
			</redirect>
		</rule>
	</navigation>	

</page>
