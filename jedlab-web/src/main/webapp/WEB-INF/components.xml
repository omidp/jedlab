	<!-- DROOLS -->
	<drools:rule-base name="flowRules" rule-files="flow.drl" consequence-exception-handler="#{jedlabConsequenceExceptionHandler}"/>
    <drools:managed-working-memory name="flowWorkingMemory" auto-create="true" rule-base="#{flowRules}"></drools:managed-working-memory>
   
