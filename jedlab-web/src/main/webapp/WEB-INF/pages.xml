<?xml version="1.0" encoding="UTF-8"?>
<pages http-port="80" https-port="8443" login-view-id="/login.xhtml"
	xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd">

	<page view-id="*" scheme="http">
		<navigation>
			<rule if-outcome="home">
				<redirect view-id="/member/dashboard.xhtml" />
			</rule>
		</navigation>
		<navigation from-action="#{identity.login()}">
			<rule
				if="#{identity.loggedIn}">
				<redirect view-id="/member/dashboard.xhtml">
					
				</redirect>
			</rule>
			
		</navigation>
		<navigation from-action="#{identity.logout()}">
			<redirect include-page-params="false" view-id="/home.xhtml" />
		</navigation>
	</page>
	
	<page view-id="/terms.xhtml">		
		<rewrite pattern="/terms"/>		
	</page>
	
	<page view-id="/partners.xhtml">		
		<rewrite pattern="/partners"/>		
	</page>
	
	<page view-id="/rss.xhtml">		
		<rewrite pattern="/rss"/>		
	</page>
	
	<page view-id="/privacy.xhtml">		
		<rewrite pattern="/privacy"/>		
	</page>
	
	<page view-id="/recoverActLink.xhtml">		
		<rewrite pattern="/recoverActivationLink"/>		
	</page>
	
	<page view-id="/resetPassword.xhtml">		
		<rewrite pattern="/resetPassword"/>		
	</page>
	
	<page view-id="/recoverPassword.xhtml">		
		<rewrite pattern="/recoverPassword"/>		
	</page>
	
	
	<page view-id="/admin/*" login-required="true">		
		<restrict>#{s:hasRole('Admin')}</restrict>		
	</page>
	
	<page view-id="/member/*" login-required="true">		
		<action execute="#{loginActionManager.checkToken()}" on-postback="false" />
	</page>

	<exception class="org.jboss.seam.framework.EntityNotFoundException">
		<redirect view-id="/error.xhtml">
			<message severity="warn">#{messages['Record_Not_Found']}</message>
		</redirect>
	</exception>
	<exception class="javax.persistence.EntityNotFoundException">
		<redirect view-id="/error.xhtml">
			<message severity="warn">#{messages['Record_Not_Found']}</message>
		</redirect>
	</exception>
	<exception class="javax.persistence.EntityExistsException">
		<redirect view-id="/error.xhtml">
			<message severity="warn">#{messages['Duplicate_Record']}</message>
		</redirect>
	</exception>
	<exception class="javax.persistence.OptimisticLockException">
		<end-conversation />
		<redirect view-id="/error.xhtml">
			<message severity="warn">#{messages['Another_User_Changed_The_Same_Data_Please_Try_Again']}</message>
		</redirect>
	</exception>
	<exception class="org.jboss.seam.security.AuthorizationException">
		<redirect view-id="/exception.xhtml">
			<message severity="error">#{messages['You_Donot_Have_Permiss_On_To_Access_This_Resource']}</message>
		</redirect>
	</exception>
	<exception class="org.jboss.seam.security.NotLoggedInException">
		<redirect view-id="/login.xhtml">
			<message severity="warn">#{messages['org.jboss.seam.NotLoggedIn']}</message>
		</redirect>
	</exception>
	<exception class="javax.faces.application.ViewExpiredException">
		<redirect view-id="/login.xhtml">
			<message severity="warn">#{messages['Your_Session_Has_Timed_Out_Please_Try_Again']}</message>
		</redirect>
	</exception>
	<exception class="org.jboss.seam.ConcurrentRequestTimeoutException"
		log-level="trace">
		<redirect view-id="/error.xhtml">
			<message severity="warn">#{messages['Concurrent_Request_Timeout_Exception']}</message>
		</redirect>
	</exception>
	<exception class="java.io.IOException" log-level="trace">
		<redirect view-id="/error.xhtml">
			<message severity="warn">#{messages['Set_ArrayList']}</message>
		</redirect>
	</exception>
	<exception class="org.jboss.seam.web.FileUploadException">
		<redirect view-id="/error.xhtml">
			<message>#{org.jboss.seam.handledException.message}</message>
		</redirect>
	</exception>
	<exception class="org.hibernate.exception.SQLGrammarException">
		<redirect view-id="/error.xhtml">

		</redirect>
	</exception>
	<exception>
		<redirect view-id="/error.xhtml">
			<message severity="error">#{messages['Unexpected_Error_Please_Try_Again']}</message>
		</redirect>
	</exception>
</pages>
