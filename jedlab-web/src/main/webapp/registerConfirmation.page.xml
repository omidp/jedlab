<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd">

	<begin-conversation flush-mode="manual" join="true"/>
	
	<action execute="#{registerAction.load()}"/>
	
	<param name="ac" value="#{user.activationCode}" required="true"/>
	
	<navigation from-action="#{registerAction.confirm()}">
		<end-conversation/>
		<rule if-outcome="confirmed">
			<redirect view-id="/home.xhtml" include-page-params="false">				
			</redirect>
		</rule>		
	</navigation>
   
</page>
