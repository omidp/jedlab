<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd">
	
	<rewrite pattern="/login"/>
	
	<param name="from"/>
	<param name="courseId"/>

	<navigation from-action="#{identity.login()}">
		<rule if-outcome="loggedIn" if="#{identity.loggedIn}">
			<redirect view-id="/member/dashboard.xhtml"
				include-page-params="false">
			</redirect>
		</rule>
		<redirect view-id="/login.xhtml"
				include-page-params="false">
		</redirect>
	</navigation>

	<action execute="#{identity.login()}" if="#{identity.loggedIn}"
		on-postback="false" />

	<navigation from-action="#{registerAction.register()}">
		<end-conversation />
		<rule if-outcome="registered">
			<redirect view-id="/thankyou.xhtml" include-page-params="false">
			</redirect>
		</rule>
	</navigation>



</page>
